
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="Crypto App"
        app:titleTextColor="#FFFFFF"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <GridLayout
        android:id="@+id/MainGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:rowCount="3"
        android:layout_marginTop="@dimen/abc_text_size_display_1_material"
        android:columnCount="1">
        <TextView
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypt"
            android:textSize="38sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#2196F3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_rowWeight="8"
            android:layout_gravity="center"
            android:layout_row="1"
            android:weightSum="6"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginRight="4dp"
                    android:id="@+id/OpenFileButton"
                    android:text="Choose File"
                    android:background="#2196F3"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:maxWidth="150dp"
                    android:maxHeight="80dp"
                    android:id="@+id/SelectedFileNameLabel"
                    android:layout_width="wrap_content"
                    android:text="No file selected"
                    android:textStyle="italic"
                    android:layout_height="wrap_content"/>
                <Button
                    android:visibility="invisible"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/RemoveButton"
                    android:text="Remove?"
                    android:textSize="12sp"
                    android:background="@drawable/btn_rounded_red"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="OR"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:id="@+id/TextInputEditor"
                android:hint="Paste/Write text here to encrypt."
                android:textColorHint="#A5A5A5"
                android:layout_width="match_parent"
                android:editable="true"
                android:textSize="18sp"
                android:inputType="textNoSuggestions | textMultiLine | text"
                android:lines="5"
                android:autoText="false"
                android:minLines="5"
                android:gravity="top | left"
                android:scrollbars="vertical"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:text="Use app's password?"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="25dp"
                    android:checked="true"
                    android:id="@+id/PasswordSwitch" />

            </LinearLayout>
            <EditText
                android:visibility="invisible"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:id="@+id/CustomPasswordEntry"
                android:hint="Password (Min:6 Max:16)"
                android:textColorHint="#A5A5A5"
                android:layout_width="300dp"
                android:editable="true"
                android:textSize="18sp"
                android:inputType="textNoSuggestions"
                android:lines="1"
                android:autoText="false"
                android:minLines="1"
                android:gravity="top | left"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_row="2"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/EncryptButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Encryption"
                android:enabled="false"
                android:textAlignment="center"
                android:background="#2196F3"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </GridLayout>
    <GridLayout
        android:id="@+id/ActivityGrid"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:rowCount="1"
        android:layout_marginTop="@dimen/abc_text_size_display_1_material"
        android:columnCount="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#00FFFFFF"
            
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_width="100dp"
                android:indeterminate="true"
                
                android:layout_height="100dp"/>
            <TextView
                android:text="Do not close the application. Encryption in progress..."
                android:textColor="#2196F3"
                android:gravity="center_horizontal"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </GridLayout>


</android.support.design.widget.CoordinatorLayout>