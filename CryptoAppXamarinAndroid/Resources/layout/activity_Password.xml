<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
   android:id="@+id/my_actionbar"
   android:layout_width="match_parent"
   android:layout_height="?attr/actionBarSize"
   android:background="?attr/colorPrimary"
   android:elevation="4dp"
   app:title="Crypto App"
   app:titleTextColor="#FFFFFF"
   android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
   app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <LinearLayout
        android:layout_marginTop="@dimen/abc_text_size_display_1_material"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:visibility="invisible"
            android:layout_marginBottom="30dp"
            android:id="@+id/PasswordHeading"
            android:text="Enter New Password"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:visibility="invisible"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/PasswordEntry"
                android:hint="Password (Min:6 Max:16)"
                android:textColorHint="#A5A5A5"
                android:layout_width="250dp"
                android:editable="true"
                android:textSize="18sp"
                android:inputType="textPassword"
                android:lines="1"
                android:autoText="false"
                android:minLines="1"
            android:layout_marginBottom="5dp"
                android:gravity="top | left"/>
        <EditText
            android:visibility="invisible"
            android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ConfirmPasswordEntry"
                android:hint="Confirm Password"
                android:textColorHint="#A5A5A5"
                android:layout_width="250dp"
                android:editable="true"
                android:textSize="18sp"
                android:inputType="textPassword"
                android:lines="1"
                android:autoText="false"
                android:minLines="1"
                android:gravity="top | left"/>
        <Button
            android:id="@+id/SaveButton"
            android:visibility="invisible"
                    android:text="Save Password"
                    android:background="@drawable/btn_rounded"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
